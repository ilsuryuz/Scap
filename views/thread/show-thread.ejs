<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs') %>

    <body>
        <form action="/">
            <input type="submit" value="Back" />
        </form>
        <% console.log(thCreator) %> 
        <% if(currentUser) { if(currentUser.username === thCreator.username) { %> 
        <form action="/thread/<%=thread._id%>/edit">
            <input type="submit" value="Edit Thread" />
        </form>
        <% }} %> 
        <h3>
            <%= thread.name %>
        </h3>
        <div class="content-Thread">
            <%- thread.content %>
                <form action="/comment/<%=thread._id%>/new-comment">
                    <input type="submit" value="Reply">
                </form>
        </div>
        <div class="content-Comments">
            <% thread.comments.forEach(comment=> { %> 
                <div class="content-Comment">
                    <% if(currentUser) { %> 
                        <% if(currentUser.username === comment.creator.username) {  %> 
                        <form action="/comment/<%=comment._id%>/edit">
                            <input type="submit" value="Edit Comment" />
                        </form>
                        <% } %> 
                        <% } %> 
                    <h3><%= comment.creator.username %> </h3>
                    <%- comment.content %> 
                </div>
                <% }) %> 
        </div>
    </body>
</html>